<html>


    <head>
        <title>Videokart : Memories that lasts forever</title>
        <link href="https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet" />
        <% include partials/cssIncludes.ejs %>
        <style>


h1 {
font-weight: 400;
font-size: 40px;
}

.margin-base-vertical {
margin: 40px 0;
}
        </style>

    </head>


    <body style="background-color:#ffeb3b">

      <% include partials/menu.ejs %>

<br/><br/><br/><br/>
      <div class="container">

		<div class="row">
			<div class="col-md-4 col-md-offset-4 panel panel-default">

				<h1 align="center" class="margin-base-vertical">Sign up </h1>
				 <% if( typeof(errorMessage) !== 'undefined' ) {%>
						 <h3 align="center" class="margin-base-vertical"><code><%=errorMessage%></code></h3>
       	 <%}%>
				<form class="margin-base-vertical" method="post" action="/signup">
					<p class="input-group ">
						<span class="input-group-addon"><span class="icon-user"></span></span>
						<input type="text" pattern="[a-zA-Z0-9].*" title="Username can not contain special character" required class="form-control input-lg" name="username" placeholder="username" />
					</p>

          <p class="input-group ">
						<span class="input-group-addon"><span class="icon-envelope"></span></span>
						<input type="email" required class="form-control input-lg" name="email" placeholder="email address" />
					</p>

          <p class="input-group ">
						<span class="input-group-addon"><span class="icon-key"></span></span>
						<input pattern=".{5,}" type="password" title="Password must be at least 5 characters long"  required class="form-control input-lg" name="password" placeholder="password" />
					</p>

					<p class="help-block text-center">
            <small>We hate spams, so don't worrry</small>
          </p>

					<p class="text-center">
						<button type="submit" class="btn btn-success btn-lg">Create Account</button>
					</p>

				</form>

				<div class="margin-base-vertical">
					<h5 align="center">Already registered? <a href="/login"> LogIn</a></h5>
				</div>

			<!--	<div align="center">
	 			 <a href="/">Go back to the Home page</a>
	 		 </div>-->
			 <br/>

			</div>
		</div>
	</div>
        <br/><br/> <br/><br/> <br/><br/>

        <% include partials/footer.ejs %>
        <% include partials/jsIncludes.ejs %>
    </body>




</html>
