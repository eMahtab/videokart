<html>


    <head>
        <title>Videokart : Memories that lasts forever</title>
        <link href="https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet" />
        <% include partials/cssIncludes.ejs %>
        <style>


h1 {
font-weight: 400;
font-size: 40px;
}

.margin-base-vertical {
margin: 40px 0;
}
        </style>

    </head>


    <body style="background-color:#ffeb3b">

      <% include partials/menu.ejs %>

<br/><br/><br/><br/>
<div class="container">
<div class="row">
<div class="col-md-4 col-md-offset-4 panel panel-default">
  <% if( typeof(session.newuser) !== 'undefined' && session.newuser !== null ) {%>
   <h3><br/>
    Cheers <code><%=session.newuser%></code>, your account have been created<br/>
  </h3>
  <%}%>
  <% if( typeof(loggedOutUser) !== 'undefined' && loggedOutUser !== null ) {%>
   <h3 style="text-align:center"><br/>
    See you soon <code><%=loggedOutUser%></code>
  </h3>
  <%}%>
  <h1 align="center" class="margin-base-vertical">Login</h1>
      <% if( typeof(errorMessage) !== 'undefined' ) {%>
  <div align="center">
   <code><%=errorMessage%></code>
 </div>
 <%}%>

  <form class="margin-base-vertical" method="post" action="/login">
    <p class="input-group ">
      <span class="input-group-addon"><span class="icon-envelope"></span></span>
      <input type="email" required class="form-control input-lg" name="email" placeholder="email address" />
    </p>

    <p class="input-group ">
      <span class="input-group-addon"><span class="icon-key"></span></span>
      <input type="password" required class="form-control input-lg" name="password" placeholder="password" />
    </p>

    <br/>

    <p class="text-center">
      <button type="submit" class="btn btn-success btn-lg">Get In</button>
    </p>
  </form>

  <div class="margin-base-vertical">
    <h5 align="center">Don't have an account? <a class="plainLink" href="/signup">Create one</a></h5>
  </div>

  <!--<div align="center">
   <a href="/">Go back to the Home page</a>
 </div>-->
 <br/>

</div>
</div>
</div>
        <br/><br/> <br/><br/> <br/><br/>

        <% include partials/footer.ejs %>
        <% include partials/jsIncludes.ejs %>
    </body>




</html>
